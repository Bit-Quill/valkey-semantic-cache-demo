{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": ["ES2022"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true /* Only type check project files, not dependencies */,
    "forceConsistentCasingInFileNames": true /* Ensures that imported paths are case consistent with actual file names */,
    "resolveJsonModule": true /* Type-safe JSON imports */,
    "moduleResolution": "node" /* Since this is a Node backend app. Use bundler for Vite/Webpack for FE */,
    "declaration": true /* Generates .d.ts type declaration files */,
    "declarationMap": true /* Generates d.ts.map files like sourceMap but for types */,
    "sourceMap": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
